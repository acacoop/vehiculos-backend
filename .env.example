# Application Configuration
APP_PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=vehicles_db

# Rate Limiting Configuration
# Window in milliseconds (60000 = 1 minute, 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=60000
# Maximum requests per window
RATE_LIMIT_MAX=1000

# Microsoft Entra ID (Azure AD) Authentication
# Tenant that issues tokens for your organization
ENTRA_TENANT_ID=
# API Application (client) ID or App ID URI expected in aud
ENTRA_AUDIENCE=
# Optional explicit issuer (defaults to https://login.microsoftonline.com/${ENTRA_TENANT_ID}/v2.0)
ENTRA_ISSUER=

# User Sync (Microsoft Graph - Client Credentials)
ENTRA_CLIENT_ID=
ENTRA_CLIENT_SECRET=
# Optional: restrict sync to a specific Entra group (object id)
ENTRA_GROUP_ID=
